<Window x:Class="MessengerUI.ChattingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerUI"
        mc:Ignorable="d"
        Title="ChattingWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hiển thị thông tin user -->
        <TextBlock x:Name="UserInfoText" 
                   Grid.Row="0" 
                   FontWeight="Bold" 
                   Margin="10"/>

        <!-- Danh sách tin nhắn -->
        <ScrollViewer x:Name="SvMessages" Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel x:Name="MessagesPanel" />
        </ScrollViewer>

        <!-- Ô nhập và gửi -->
        <DockPanel Grid.Row="2" Margin="5">
            <TextBox x:Name="MessageInput" Width="450" Height="30" Margin="0,0,5,0"/>
            <Button Content="Gửi" Width="80" Click="SendMessage_Click"/>
        </DockPanel>
   

    </Grid>
</Window>
