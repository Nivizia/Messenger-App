<Window x:Class="MessengerUI.ChattingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerUI"
        mc:Ignorable="d"
        Title="Chat Window" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="LightBlue" Padding="10" Margin="0,0,0,10" CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="ChattingUserName" Text="Chat with: [Loading...]" FontSize="16" FontWeight="Bold"/>
                <Button x:Name="RefreshMessagesButton" Content="Refresh" Width="80" Height="25"
                        HorizontalAlignment="Right" Margin="10,0,0,0" Click="RefreshMessagesButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Chat History Section -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
            <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="ChatHistoryPanel" Margin="10">
                    <!-- Chat messages will be added here dynamically -->
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Message Input Section -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="MessageInput" Grid.Column="0" Height="40" VerticalContentAlignment="Center"
                     Margin="0,0,10,0" KeyDown="MessageInput_KeyDown"
                     TextWrapping="Wrap" AcceptsReturn="False"/>
            <Button x:Name="SendButton" Grid.Column="1" Content="Send" Width="80" Height="40"
                    Click="SendButton_Click"/>
        </Grid>

        <!-- Status Section -->
        <StackPanel Grid.Row="3">
            <TextBlock x:Name="StatusLabel" Text="Ready" Foreground="Green" FontStyle="Italic"/>
        </StackPanel>

    </Grid>
</Window>
