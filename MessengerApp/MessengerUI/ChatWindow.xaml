<Window x:Class="MessengerUI.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatBox" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Hiển thị thông tin user -->
        <TextBlock x:Name="UserInfoText" 
                   Grid.Row="0" 
                   FontWeight="Bold" 
                   Margin="10"/>

        <!-- Danh sách tin nhắn -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel x:Name="MessagesPanel" />
        </ScrollViewer>

        <!-- Ô nhập và gửi -->
        <DockPanel Grid.Row="2" Margin="5">
            <TextBox x:Name="MessageInput" Width="450" Height="30" Margin="0,0,5,0"/>
            <Button Content="Gửi" Width="80" Click="SendMessage_Click"/>
        </DockPanel>
    </Grid>
</Window>
