<Window x:Class="MessengerUI.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat - Messenger App" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#272537">

    <Window.Resources>
        <!-- Chat-specific button style that inherits from app default but with custom colors -->
        <Style x:Key="SendButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FFC65C"/>
            <Setter Property="Foreground" Value="#272537"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="35"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6B052"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Background" Value="#FFC65C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Chat-specific textbox style that inherits from app default -->
        <Style x:Key="MessageInputStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat Header -->
        <Border Grid.Row="0"
                Background="#353340"
                CornerRadius="10"
                Padding="15,10"
                Margin="0,0,0,10">
            <TextBlock x:Name="UserInfoText"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Messages Area -->
        <Border Grid.Row="1"
                Background="#353340"
                CornerRadius="10"
                Margin="0,0,0,10">
            <ScrollViewer x:Name="MessagesScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          Padding="10"
                          Background="Transparent">
                <StackPanel x:Name="MessagesPanel" />
            </ScrollViewer>
        </Border>

        <!-- Message Input Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="MessageInput"
                     Grid.Column="0"
                     Style="{StaticResource MessageInputStyle}"
                     Margin="0,0,10,0"
                     KeyDown="MessageInput_KeyDown"
                     TextWrapping="Wrap"
                     AcceptsReturn="False"/>

            <Button x:Name="SendButton"
                    Grid.Column="1"
                    Content="Send"
                    Style="{StaticResource SendButtonStyle}"
                    Click="SendMessage_Click"/>
        </Grid>
    </Grid>
</Window>
